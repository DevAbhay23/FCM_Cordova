<?xml version='1.0' encoding='utf-8'?>
<widget id="com.demo.messaging" version="1.0.0" android-versionCode="1" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PushNotif</name>
    <description>
      Application that shows android push notifications
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ShowSplashScreen" value="true"/>
    <preference name="SplashScreen" value="screen"/>
    <preference name="AutoHideSplashScreen" value="false"/>
    <preference name="SplashShowOnlyFirstTime" value="false"/>
    <preference name="FadeSplashScreen" value="false"/>
    <preference name="SplashMaintainAspectRatio" value="true" />
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen"/>
    </feature>

    <splash src="res/screens/android/drawable-hdpi/message-splash_l.png" density="land-hdpi"/>
    <splash src="res/screens/android/drawable-mdpi/message-splash_l.png" density="land-mdpi"/>
    <splash src="res/screens/android/drawable-xhdpi/message-splash_l.png" density="land-xhdpi"/>
    <splash src="res/screens/android/drawable-xxhdpi/message-splash_l.png" density="land-xxhdpi"/>
    <splash src="res/screens/android/drawable-xxxhdpi/message-splash_l.png" density="land-xxxhdpi"/>

    <splash src="res/screens/android/drawable-hdpi/message-splash_p.png" density="port-hdpi"/>
    <splash src="res/screens/android/drawable-mdpi/message-splash_p.png" density="port-mdpi"/>
    <splash src="res/screens/android/drawable-xhdpi/message-splash_p.png" density="port-xhdpi"/>
    <splash src="res/screens/android/drawable-xxhdpi/message-splash_p.png" density="port-xxhdpi"/>
    <splash src="res/screens/android/drawable-xxxhdpi/message-splash_p.png" density="port-xxxhdpi"/>


    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="loadUrlTimeoutValue" value="700000" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
